ALTER PROCEDURE [dbo].[loginIntent]
    @nombreUsuario NVARCHAR(30),
    @userPassword NVARCHAR(50)

AS

    SELECT * From Usuario
    WHERE nombreUsuario = @nombreUsuario
    AND userPassword = HASHBYTES('SHA2_512', @userPassword);
    UPDATE Usuario
    SET [lastLogged] = GETDATE()
    WHERE nombreUsuario = @nombreUsuario
    AND userPassword = HASHBYTES('SHA2_512', @userPassword);

GO
